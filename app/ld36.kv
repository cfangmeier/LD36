#:kivy 1.9.0
#:import asset_path app.ld36.asset_path

TestGame:

<TestGame>:
    gameworld: gameworld
    GameWorld:
        id: gameworld
        gamescreenmanager: gamescreenmanager
        size_of_gameworld: 100*1024
        system_count: 4
        zones: {'general': 160000}
        camera: camera1
        background: background
        buildings: buildings
        PositionSystem2D:
            system_id: 'position'
            gameworld: gameworld
            zones: ['general']
        Renderer:
            id: renderer
            gameworld: gameworld
            system_id: 'renderer'
            zones: ['general']
            frame_count: 2
            gameview: 'camera1'
            updateable: True
            shader_source: asset_path('positionshader.glsl', 'assets/glsl')
        GameView:
            system_id: 'camera1'
            gameworld: gameworld
            size: root.size
            window_size: root.size
            pos: root.pos
            do_scroll_lock: False
            id: camera1
        TileSystem:
            system_id: 'background'
            id: background
            gameworld: gameworld
            camera_pos: camera1.camera_pos
            camera_size: camera1.size
            camera_scale: camera1.camera_scale
            gen_new_tile: root.gen_background_tile
        TileSystem:
            system_id: 'buildings'
            id: buildings
            gameworld: gameworld
            camera_pos: camera1.camera_pos
            camera_size: camera1.size
            camera_scale: camera1.camera_scale
            gen_new_tile: root.gen_building_tile
    GameScreenManager:
        id: gamescreenmanager

